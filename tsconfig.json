{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitThis": false,
    "outDir": "../",
    "jsx": "react",
    "jsxFactory": "dom",
    "jsxFragmentFactory": "frag",
    "rootDir": "./",
    "skipLibCheck": true,
    "baseUrl": "./",
    "removeComments": true,
    "composite": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["./**/_css", "./_css"]
}
